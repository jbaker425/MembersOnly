<h2>Posts</h2>

<% @posts.each do |post| %>
  <% if member_signed_in? %>
    <h3><%= post.member.name %></h3>
  <% end %>
  <p><%= post.body %></p>
  
  <span>
    <%= link_to 'Show', post_path(post) %>
    <% if member_signed_in? %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br>
    <% end %>  
  </span> 
<% end %>

<br><br><br>

<% if member_signed_in? %>
  <button><%= link_to 'New Post', new_post_path %></button>
<% end %>
